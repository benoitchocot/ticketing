<h1>Liste des Utilisateurs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Rôle</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td class="d-flex">
          <%= link_to 'Modifier', edit_admin_user_path(user), class: 'btn btn-warning m-1' %>
          <%= button_to 'Supprimer', admin_user_path(user), method: :delete, data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet utilisateur ?" }, class: "btn btn-danger m-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Créer un utilisateur', new_admin_user_path, class: 'btn btn-primary' %>
