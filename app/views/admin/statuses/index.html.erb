          <%= link_to 'Editer', edit_admin_status_path(status), class: 'btn btn-warning m-1' %>
          <%= button_to 'Supprimer', admin_status_path(status), method: :delete, data: { turbo_confirm: 'ÃŠtes-vous sÃ»r?' }, class: 'btn btn-danger m-1' %>
